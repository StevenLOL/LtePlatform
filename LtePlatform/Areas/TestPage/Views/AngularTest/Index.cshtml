<div class="row">
    <div class="col-md-3" ng-show="sideBarShown">
        <div ng-include="'/appViews/GeneralMenu.html'"></div>
    </div>
    <div ng-class="{'col-md-9': sideBarShown, 'col-md-12': !sideBarShown}">
        <p>
            <ul class="nav nav-pills">
                <li ng-repeat="sectionItem in sectionItems" ng-class="{active: section.title == sectionItem.name}">
                    <a ng-href="{{sectionItem.url}}">{{sectionItem.displayName}}</a>
                </li>
            </ul>
        </p>
        <div ng-view></div>
    </div>
</div>

@section Scripts{
<style>
    .odd {
        background-color: blue;
    }

    .even {
        background-color: red;
    }

    input.ng-invalid {
        border: 1px solid red;
    }

    input.ng-valid {
        border: 1px solid green;
    }
</style>
    <script src="~/Areas/TestPage/Scripts/angular/route.js"></script>
<script src="~/Areas/TestPage/Scripts/angular/root.js"></script>
}