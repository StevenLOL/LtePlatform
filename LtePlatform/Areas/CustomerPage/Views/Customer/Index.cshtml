<div class="row" ng-controller="customer.index">
    <div class="col-md-3" ng-show="sideBarShown">
        <div ng-include="'/appViews/GeneralMenu.html'"></div>
    </div>
    <div ng-class="{'col-md-9': sideBarShown, 'col-md-12': !sideBarShown}">
        <div uib-alert ng-repeat="message in page.messages" type="{{message.type}}"
             dismiss-on-timeout="5000" close="closeAlert($index)">
            {{message.contents}}
        </div>
        <div ng-view></div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/customer/route.controller.js"></script>
    <script src="~/Scripts/customer/index.controller.js"></script>
    <script src="~/Scripts/customer/emergency/list.js"></script>
    <script src="~/Scripts/customer/emergency/new.dialog.js"></script>
}