@{
    ViewBag.Title = "指标文件导入";
}

<div class="panel panel-warning">
    <div class="panel-heading">
        <h2 class="panel-title">
            <strong>@ViewBag.Title</strong>
        </h2>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-7">
                <h4>指标文件选择</h4>
                @using (Html.BeginForm("KpiImport", "Kpi",
                    FormMethod.Post, new {enctype = "multipart/form-data", @class = "form-horizontal", role = "form"}))
                {
                    <div class="form-group">
                        <label class="col-md-4 control-label">每日KPI Excel文件选择：</label>
                        <div class="col-md-6">
                            <input name="dailyKpi" class="form-control" type="file" accept=".xls, .xlsx"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-primary">
                                <span class="glyphicon glyphicon-save"></span>导入文件
                            </button>
                        </div>
                    </div>
                }
                @using (Html.BeginForm("SwitchImport", "Kpi",
                FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
                {
                    <div class="form-group">
                        <label class="col-md-4 control-label">4G用户3G流量比文件选择：</label>
                        <div class="col-md-6">
                            <input name="downSwitch" class="form-control" type="file" accept=".csv" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-primary">
                                <span class="glyphicon glyphicon-save"></span>导入文件
                            </button>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-5">
                @{Html.RenderPartial("_AlertPanel");}
            </div>
        </div>
    </div>
</div>
